set guifont=Ubuntu_Mono:h14


cd $HOME/OneDrive/Documents

colorscheme peachpuff

" Add line numbers
set number

" PEP-8 style linewidth
set textwidth=79

" Readable whitespace characters
set listchars=tab:>-,trail:-,eol:$ list

" WHITESPACE
" http://vimcasts.org/episodes/tabs-and-spaces/
" Render a tab as this many spaces
set tabstop=2
" TODO
set softtabstop=2
" TODO
set shiftwidth=2
" Use spaces instead of tabs
set expandtab

" Case-insensitive search if lowercase
set ignorecase
set smartcase

" Don't save files that end with ~ to pwd
" https://stackoverflow.com/a/6367422/11415371
set backup
set backupdir=C:/WINDOWS/TEMP
set backupskip=C:/WINDOWS/Temp/*
set directory=C:/WINDOWS/Temp
set undodir=C:/WINDOWS/Temp
set writebackup
